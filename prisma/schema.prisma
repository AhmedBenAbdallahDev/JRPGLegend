// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Game {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  description String?
  image     String
  gameLink  String   // URL to the game ROM file on your server
  core      String   // Emulator core type (nes, snes, etc.)
  published Boolean  @default(false)
  categories Category[]
}

model Category {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  image     String?
  games     Game[]
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  password   String
  role       String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}